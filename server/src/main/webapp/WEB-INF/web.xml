<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>PrintMe</display-name>
    <servlet>
        <display-name>PrintMe</display-name>
        <servlet-name>PrintMe</servlet-name>
        <servlet-class>io.ktor.server.servlet.jakarta.ServletApplicationEngine</servlet-class>
        <init-param>
            <param-name>io.ktor.ktor.config</param-name>
            <param-value>application.conf</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </servlet>

    <icon>
        <small-icon>small_icon.png</small-icon>
        <large-icon>large_icon.png</large-icon>
    </icon>

    <servlet-mapping>
        <servlet-name>PrintMe</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>